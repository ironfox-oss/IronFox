+                        applyDohSettings(
+                            contentState = contentState,
+                            onContentStateChange = updateContentState,
+                            state = dohSettingsState,
+                            dohSettingsProvider = dohSettingsProvider,
+                        )
+                    },
+                )
+            }
+        }
+    }
